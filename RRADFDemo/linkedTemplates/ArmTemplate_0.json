					},
					{
						"name": "StoreKey",
						"type": "Int32"
					},
					{
						"name": "ProductKey",
						"type": "Int32"
					},
					{
						"name": "PromotionKey",
						"type": "Int32"
					},
					{
						"name": "CurrencyKey",
						"type": "Int32"
					},
					{
						"name": "UnitCost",
						"type": "Decimal"
					},
					{
						"name": "UnitPrice",
						"type": "Decimal"
					},
					{
						"name": "SalesQuantity",
						"type": "Int32"
					},
					{
						"name": "ReturnQuantity",
