		{
			"name": "[concat(parameters('factoryName'), '/', parameters('integrationRuntime_rradfdemo-selfhosted-ir'))]",
			"type": "Microsoft.DataFactory/factories/integrationRuntimes",
			"apiVersion": "2018-06-01",
			"properties": {
				"type": "SelfHosted",
				"description": "Self-hosted IR",
				"typeProperties": {}
